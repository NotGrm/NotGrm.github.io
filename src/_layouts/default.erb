<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: data.title %>
  </head>
  <body class="<%= data.layout %> <%= data.page_class %>" data-controller="daynight">
    <div class="cover">
      <%= render "header" %>

      <main>
        <article class="center"><%= yield %></article>

        <hr>

        <aside class="stack center" data-stack-space="small" data-center-with-text="true">
          <h2>You can find me on</h2>

          <div class="cluster" data-align="center" role="list">
            <%= render "links", links: site.data.links %>
          </div>
        </aside>
      </main>

      <%= render "footer", metadata: site.metadata %>
    </div>
  </body>
</html>
